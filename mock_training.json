{
    "dataset": {
        "extension": "xdmf",
        "xdmf_folder": "dataset/spindle/train",
        "meta_path": "dataset_config/spindle_meta.json",
        "khop": 1,
        "new_edges_ratio": 0
    },
    "model": {
        "type": "epd",
        "message_passing_num": 10,
        "node_input_size": 6,
        "edge_input_size": 4,
        "output_size": 3,
        "hidden_size": 128,
        "num_heads": 0,
        "use_silu_activation": false,
        "use_rope_embeddings": false,
        "use_gated_attention": false,
        "pool_is_remeshing": false,
        "pool_node_mask": "all"
    },
    "loss": {
        "type": ["l2loss"],
        "weights": [1],
        "gradient_method": "finite_diff"
    },
    "index": {
        "feature_index_start": 0,
        "feature_index_end": 6,
        "output_index_start": 0,
        "output_index_end": 3,
        "node_type_index": 6
    },
    "transformations": {
        "preprocessing": {
            "noise": 0.003,
            "noise_index_start": [0],
            "noise_index_end": [3],
            "masking": 0
        },
        "world_pos_parameters": {
            "use": true,
            "world_pos_index_start": 0,
            "world_pos_index_end": 3
        }
    },
    "training": {
        "use_spatial_mtp": false,
        "use_temporal_block": false,
        "residual_save_steps": [2, 300, 5000],
        "sampling_method": "fps"
    }
}
